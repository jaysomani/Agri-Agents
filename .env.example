PORT=port

# Twilio credentials - copy to .env and fill in your values
# Get these from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# For inbound voice agent - your public URL (ngrok when testing locally)
# e.g. https://abc123.ngrok-free.app
BASE_URL=https://your-ngrok-url.ngrok-free.app

SARVAM_API_KEY=sk_SARVAM_API_KEY

# AWS Bedrock (text model for LLM - ConverseStream)
AWS_REGION=us-east-1
# Optional: BEDROCK_MODEL_ID=anthropic.claude-sonnet-4-6
# Optional: DEBUG_LLM_PROMPT=1 to log full prompt before each LLM call
